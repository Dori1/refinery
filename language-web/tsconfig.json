{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "paths": {
      "xtext/*": ["./src/main/js/xtext/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noEmit": true
  },
  "include": ["./src/main/js/**/*"],
  "exclude": [
    "./src/main/js/xtext/**/*",
    "./node_modules/**/*"
  ]
}
