{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["./src/main/js/**/*"],
  "exclude": ["./src/main/js/xtext/**/*"]
}
