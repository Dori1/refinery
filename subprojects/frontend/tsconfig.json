{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": false,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./build/generated/sources/lezer/*"]
}
